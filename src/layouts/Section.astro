---
interface Astro {
	title?: string;
	id?: string;
	class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section
	data-testid={id}
	id={id}
	class:list={['relative flex min-h-screen flex-col pb-16 md:pb-0', className]}
>
	{
		title && (
			<div class="sticky top-0 z-10 grid place-items-center bg-white p-4 dark:bg-black md:pt-14">
				<h2 class="font-monospace text-2xl text-orange lg:text-4xl">{title}</h2>
				<span class="h-1 w-10 bg-orange" />
			</div>
		)
	}
	<slot />
</section>
