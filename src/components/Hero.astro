---
import { Icon } from 'astro-icon/components';
import Next from './ui/Next.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center sm:flex-row"
	id="home"
>
	<div class="mb-10 flex flex-col items-center sm:mb-0 sm:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white md:text-4xl lg:text-5xl">
				Hi! My name is <span class="text-orange">Suroj Dangol</span> and I am a Full Stack developer
				based in Nepal.
			</h1>
		</div>
		<div class="mb-10">
			<!-- <Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Learn more</Button> -->

			<a href="https://github.com/Surojd" target="_blank" rel="noopener" aria-label="github"
				><Icon
					class="h-8 text-black hover:text-orange dark:text-white dark:hover:text-orange md:h-12"
					name="mdi:github"
					size={100}
				/></a
			>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<img
			src="/images/surojd.webp"
			height="400"
			width="400"
			alt="Coding girl"
			class="aspect-square w-auto rounded-full object-cover"
			loading="eager"
		/>
	</div>
	<Next url="#about" />
</section>
